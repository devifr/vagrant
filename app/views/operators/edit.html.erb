<div class="innerLR add-margin-top">
	<div class="tab-content" style="padding: 0;">
		<div class="hr_title">
  	 	<div class="buttons pull-right">
			  <%= link_to '<i></i>Add New Operator'.html_safe,new_operator_path,:class => "btn btn-icon btn-primary glyphicons circle_plus green", id:"gradien" if allow?(:operator,[:create]) %>
			</div>
			<h3> Edit operator </h3>
		</div>
		<%= form_for(:operator, url: operator_path(@operator.id), method: "put", html: {class: "form-horizontal margin-none"}) do |f| %>
	  	<%= render partial:"form", 
	  	           locals: {
	  	           	f: f, 
	  	           	operator_profile: @operator.profile, 
	  	           	operator_profile_address: 
	  	           	  if @operator.profile
	  	           	  	@operator.profile.address
	  	           	  else
	  	           	  	{}
	  	           	  end
	  	           } %>
  	<% end %>
	</div>
</div>



	

