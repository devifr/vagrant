			<div class="block-container">
				<div class="remove_block"><a href="">Remove</a></div>
				<div class="row-fluid">
					<div class="span10">
						<%#= render partial:"form_group",locals: {f: f} %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div id="add_more"><a href="">Add More</a></div> -->
		<br>
		<div class="controls">
			<%= link_to "<i></i>Cancel".html_safe ,work_forms_path,class: "btn btn-icon btn-default" %>
			<%= button_tag "<i></i>Save".html_safe,:class => "btn btn-icon btn-primary circle_ok" %>
		</div>
	</div>
</div>