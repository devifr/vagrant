<div class="innerLR add-margin-top">
	<div class="form-horizontal margin-none">
		<div class="widget widget-heading-simple widget-body-gray">
			<div class="row-fluid">
				<div class="form-actions">
		  	  <h3> Show Work Form Group
						<div class="buttons pull-right">
					    <%= link_to "<i></i>Edit Data".html_safe ,edit_work_form_group_path(@work_form_group.id),class: "btn btn-icon btn-primary green #{permission_active_if("Work::FormGroup",[:update,:manage])}" %>
							<%= link_to "<i></i>Cancel".html_safe ,work_form_groups_path,class: "btn btn-icon btn-default" %>
					  </div>
					</h3>
				</div>

				<table class="table table-stripped gray-popup view_table">
			    <tbody>
			    	<tr>
	            <th width="30%">Parent</th>
	            <th><%= @work_form_group.parent_name %></th>
		        </tr>
		        <tr>
	            <td>Name</td>
	            <td><%= @work_form_group.name %></td>
		        </tr>
			    	<tr>
	            <td width="30%">Work Form</th>
	            <td><%= @work_form_group.work_form.try(:name) %></th>
	        	</tr>
			    	<tr>
	            <td width="30%">Position</th>
	            <td><%= @work_form_group.position %></th>
	        	</tr>
			    </tbody>
				</table>
			</div>
		</div>
	</div>

</div>



