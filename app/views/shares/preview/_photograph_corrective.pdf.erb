<style type='text/css'>
  *{
    font-size: 13.5px;
  }
  .body{
    background: #fff;
    font-family: Arial, Verdana;
    width: 960px; 
  }

  .widget{
    background: #fff;
    margin: 0 auto 10px;
  }

  .content_report{ border: solid 1px #555;}
  .table_photograph{ width: 98%; }

  .header_report{
    background-color: #FFB5B5;
    border-bottom: solid 1px #555;
    padding: 10px;
    text-align: center;
  }

  table{
    border-top-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    display: table;
    border: 1px solid black;
    border-collapse: collapse;
    border-spacing: 0;
  }

  .table_photograph td{
    padding-left: 10px;
  }

  .form-horizontal .control-label {
    padding-top: 5px;
    text-align: right;
  }

  label {
    display: block;
    margin-bottom: 5px;
    font-weight: normal;
    line-height: 20px
  }

  .separator {
    margin: 10px 0;
    display: block;
  }

  .row-fluid [class*="span"]:first-child{
    margin-left: 0;
  }

  .row-fluid [class*="span"]{
    min-height: 40px;
    display: inline-block;
  }
  
  .row-fluid .span6 {
    width: 48.717948717948715%;
  }
  .row-fluid .span12 {
    width: 100%;
  }

  .thumbnail {
    display: block;
    padding: 4px;
    line-height: 20px;
    border: 1px solid black;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
    min-height: 351px;
  }

  img{
    max-width: 100%;
    vertical-align: middle;
    border: 0;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Avenir';
    margin: 0 0 10px;
    font-weight: 700;
    color: #575655;
  }
  h5 {
    font-size: 18px!important;
  }
  
  .table-bordered {
    border: 1px solid black;
    border-collapse: separate;
    border-left: 0;
    border-right: 0;
    border-bottom: 0;
    width: 100%;
  }

  .table th, .table td {
    line-height: 20px;
    text-align: left;
    vertical-align: top;
    border-top: 1px solid black;
  }
  .clearfix{
    clear: both;
  }
  .mt-190{
    margin-top: 190px;
  }
  .full_input_report{
    border-bottom: solid 1px #ccc!important;
    background-color: #fff!important;
    width: 80%!important; 
    padding: 0px!important;
  }

</style>
<div class="innerLR add-margin-top photograph-preventive-report">
  <div class="form-horizontal margin-none">
    <div class="widget widget-heading-simple widget-body-gray">
      <div class="row-fluid"> 
        <div class="content_report span12">
          <div class="header_report">
            <h4><%= "CME #{@schedule.work_type.name} Maintenance".upcase %></h4>
            <div class="small_font">Photograph</div>
            <div class="small_font">Ver.1.3</div>
          </div>
          <% work_date = Time.at(@schedule.work_date) %>
          <div class="separator"></div>
          <table border='1' align="center" class="table_photograph">
            <tr>
              <td style="width: 100px;"><label class="control-label" style="width: 85px;">Site ID :</label></td>
              <td>
                <div class="full_input_report"><%= "#{@schedule.site.code} / #{@schedule.site.name}".upcase %> </div>
                <div class="separator"></div>
              </td>
              <td style="width: 100px;">
                <label class="control-label" style="width: 85px;">Date :</label></td>
              <td>
                <div class="full_input_report"><%= "#{work_date.strftime("%d-%b-%y")}".upcase %></div>
                <div class="separator"></div>
              </td>
            </tr>
            <tr>
              <td style="width: 100px;">
                <label class="control-label" style="width: 85px;">Site Name :</label></td>
              <td>
                <div class="full_input_report"><%= "#{@schedule.site.name}".upcase %></div>
                <div class="separator"></div>
              </td>
              <td style="width: 100px;">
                <label class="control-label" style="width: 85px;">Engineer:</label></td>
              <td>
                <div class="full_input_report"><%= "#{@schedule.user.full_name}".upcase %></div>
                <div class="separator"></div>
              </td>
            </tr>
          </table>
          
          <div class="separator"></div>
          <div class="row-fluid"> 
            <div class="span12">
              <% @photo_fields.each do |photo| %>
                <div class="span6" style="margin:5px;margin-bottom: 8px;margin-top: 8px;">
                  <div class="thumbnail" style="text-align:center;">
                    <div class="image-container" style="float:left;height: 250px;text-align:center;border: 1px solid black">
                      <% if photo.picture.present? %>
                        <%= image_tag photo.picture.medium, style: 'height: 250px;' %>
                      <% end %>
                    </div>
                    <h5>
                      <%= "#{photo.item.label} (#{photo.photo_status})" %>
                    </h5>
                    
                    <table class="table table-bordered">
                      <tr>
                        <td>
                          <label>Latitude:</label>
                          <span><%= photo.latitude if photo %></span>
                        </td>
                        <td>
                          <label>Longitude:</label>
                          <span><%= photo.longitude if photo %></span>
                        </td>
                        <td>
                          <label>Accuracy:</label>
                          <span><%= photo ? photo.accuracy : 0 %> M</span>
                        </td>
                        <td>
                          <label>Status:</label>
                          <span><%= photo.photo_status if photo %></span>
                        </td>
                      </tr>
                      <tr>
                        <td colspan="4">
                          <label>Remark: 
                            <span><%= photo.remark if photo %></span>
                          </label>
                        </td>
                      </tr>
                    </table>
                    <span></span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>