<label class="control-label">Mobile</label>
<div class="controls">
	<div>
		<%= f_profile.text_field :mobile, class:'span10',placeholder:'Enter contact mobile number' %>
	</div>
	<div class="separator"></div>
</div>

<label class="control-label">Phone</label>
<div class="controls">
	<div>
		<%= f_profile.text_field :phone, class:'span10',placeholder:'Enter contact phone number' %>
	</div>
	<div class="separator"></div>
</div>
	
<label class="control-label">E-mail</label>
<div class="controls">
	<div>
		<%= f_profile.text_field :email, class:'span10',placeholder:'Enter contact email' %>
	</div>
	<div class="separator"></div>
</div>
	
<label class="control-label">Fax</label>
<div class="controls">
	<div>
		<%= f_profile.text_field :fax, class:'span10',placeholder:'Enter contact fax number' %>
	</div>	
	<div class="separator"></div>
</div>

<label class="control-label">Pin BB</label>
<div class="controls">
	<div>
		<%= f_profile.text_field :pin_bb, class:'span10',placeholder:'Enter contact pin bb' %>
	</div>
	<div class="separator"></div>
</div>	

<label class="control-label">Notes</label>
<div class="controls">
	<div>
		<%= f_profile.text_area :notes, class:'span8', :rows => 5,placeholder:'Enter contact notes' %>
	</div>
	<div class="separator"></div>
</div>