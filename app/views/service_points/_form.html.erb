<div class="widget widget-heading-simple widget-body-gray">
  <%= display_errors!(@service_point) %>
  <div class="widget-body" id="gradien2"><br>
    <div class="row-fluid">
      <div class="span10">
        <div class="control-group">
          <label class="control-label">Code</label>
          <div class="controls">
            <%= f.text_field :code,class:'span10',placeholder:'Enter Service Point Code' %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">Name</label>
          <div class="controls">
            <%= f.text_field :name,class:'span10',placeholder:'Enter Service Point Name' %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <br>
            <%= link_to "<i></i>Cancel".html_safe ,service_points_path,class: "btn btn-icon btn-default" %>
            <%= button_tag "<i></i>Save".html_safe,:class => "btn btn-icon btn-primary circle_ok" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
