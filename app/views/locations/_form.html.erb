								<%= f.text_field :name,class:'span10',placeholder:'Location Name' %>
							</div>
						</div>
						<div class="control-group">
							<div class="controls">
								<br>
								<%= link_to "<i></i>Cancel".html_safe ,locations_path,class: "btn btn-icon btn-default" %>
								<%= button_tag "<i></i>Save".html_safe,:class => "btn btn-icon btn-primary circle_ok" %>
							</div>
						</div>
					</div>
				</div>
			</div>
