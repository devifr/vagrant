<div class="innerLR add-margin-top">
	<div class="form-horizontal margin-none">

		<div class="widget widget-heading-simple widget-body-gray">
			<div class="row-fluid">
				<div class="form-actions">
					<h3>Show Project
						<div class="buttons pull-right">
							<%= link_to "<i></i>Edit Data".html_safe ,edit_project_path(@project.id),class: "btn btn-icon btn-primary green #{permission_active_if(:project,[:update,:manage])}" %>
							<%= link_to "<i></i>Cancel".html_safe ,projects_path,class: "btn btn-icon btn-default" %>
						</div>
					</h3>
				</div>
				<table class="table table-bordered table-striped table-white">
					<thead>
						<tr>
							<th width="30%">Code</th>
							<th><%= @project.code %></th>
						</tr>
					</thead> 
					<tbody>
						<tr>
							<td width="30%">Client</td>
							<td><%= @project.client.try(:name) %></td>
						</tr>
						<tr>
							<td width="30%">Project Name</td>
							<td><%= @project.name %></td>
						</tr>
					</tbody>  
				</table>	
			</div>
		</div>
	</div>
</div>



